<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StatsModeFragment"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <!-- How to make the list items not clickable:-->
    <!-- Source: http://stackoverflow.com/questions/17945498/how-set-listview-not-clickable-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Reaction Time statistics:"
        android:padding="10dp"/>
    <ListView
        android:id="@+id/reaction_time_stats_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Buzzer Count statistics:"
        android:padding="10dp"/>
    <ListView
        android:id="@+id/buzzer_count_stats_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent">
    </ListView>
</LinearLayout>
