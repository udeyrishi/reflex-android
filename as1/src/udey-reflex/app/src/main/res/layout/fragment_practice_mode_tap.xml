<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/practice_session_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/practice_session_wait"
        android:textSize="@dimen/instructions_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/instructions_margin_top"/>

    <!--Udey Source: https://github.com/markushi/android-circlebutton-->
    <!--Udey Source Icon: http://www.iconshut.com/click-double-finger-gesture-hand-one-tap-touch-zoom--->
    <at.markushi.ui.CircleButton
        android:id="@+id/practice_buzzer_button"
        android:layout_width="250dip"
        android:layout_height="250dip"
        android:src="@drawable/ic_tap"
        android:layout_gravity="center"
        app:cb_color="@color/green"
        app:cb_pressedRingWidth="15dip"
        />

</FrameLayout>
